{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "target": "ES2015",
    "module": "ESNext",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue", "script/run-cli/generator.mjs",
  ],
  "exclude": [
    "node_modules",
  ]
}
