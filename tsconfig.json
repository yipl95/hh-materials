{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@components-lx/*": [
        "./packages/*",
        "./*"
      ]
    }
  },
  "include": [
    "packages/*.d.ts",
    "packages/pc-vue3/src", // element-plus用js开发
    "docs"
  ],
  "exclude": [
    "node_modules"
  ]
}
